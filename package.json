{
  "name": "react-dice--root",
  "private": true,
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "packageManager": "yarn@3.2.0",
  "devDependencies": {
    "@babel/core": "7.17.12",
    "@babel/preset-env": "7.17.12",
    "@babel/preset-react": "7.17.12",
    "@babel/preset-typescript": "7.17.12",
    "@preconstruct/cli": "2.1.5",
    "@types/react": "18.0.9",
    "@types/three": "0.140.0",
    "eslint": "8.15.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-jest-dom": "4.0.1",
    "gh-pages": "4.0.0",
    "husky": "8.0.1",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "rollup-plugin-analyzer": "4.0.0",
    "typescript": "4.6.4"
  },
  "main": "dist/react-dice.cjs.js",
  "module": "dist/react-dice.esm.js",
  "scripts": {
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "demo:dev": "yarn workspace demo dev",
    "demo:build": "yarn workspace demo build",
    "demo:release": "yarn demo:build && gh-pages -d demo/dist/",
    "prepare": "husky install",
    "postinstall": "preconstruct dev",
    "lint": "eslint --max-warnings=0  packages/*/src demo/src",
    "lint:fix": "yarn lint --fix",
    "pretty": "prettier .prettierrc 'packages/react-dice/src/' 'demo/src'",
    "pretty:check": "yarn pretty --check",
    "pretty:fix": "yarn pretty --write"
  }
}
